{
  "manifest_version": 3,
  "name": "Login Selector",
  "version": "1.0.0",
  "description": "Activates on login.microsoftonline.com pages to provide custom functionality.",
  "permissions": [
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "https://login.microsoftonline.com/*",
    "https://tafe.prdtrs01.outlook.com/*",
    "https://ms.portal.azure.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://login.microsoftonline.com/*",
        "https://tafe.prdtrs01.outlook.com/*",
        "https://ms.portal.azure.com/*"
      ],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
